{
	"semi": true,
	"useTabs": true,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": [
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss"
	],
	"pluginSearchDirs": ["."],
	"overrides": [
		{"files": "*.ts", "options": { "parser": "typescript" } },
		{ "files": "*.svelte", "options": { "parser": "svelte" } }
	]
}
